{
  "name": "react-size-fetcher",
  "version": "0.0.0-semantically-released",
  "description": "Transparently retrieve a component size",
  "main": "dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "istanbul check-coverage --statements 90 --branches 85 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "build": "babel --out-dir dist --ignore *.test.js src",
    "prebuild": "rimraf dist",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "jest": {
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucmerceron/react-size-fetcher.git"
  },
  "keywords": [
    "react",
    "size",
    "fetcher"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Luc Merceron <luc.merceron.developer@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lucmerceron/react-size-fetcher/issues"
  },
  "homepage": "https://github.com/lucmerceron/react-size-fetcher#readme",
  "dependencies": {
    "prop-types": "15.5.8",
    "react": "15.5.4"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-eslint": "7.2.3",
    "babel-jest": "19.0.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-3": "6.24.1",
    "codecov.io": "0.1.6",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "enzyme": "2.8.2",
    "eslint-config-airbnb": "14.1.0",
    "istanbul": "0.4.5",
    "jest": "19.0.2",
    "jest-babel-istanbul": "0.1.0",
    "react-addons-test-utils": "15.5.1",
    "react-dom": "15.5.4",
    "rimraf": "2.6.1",
    "semantic-release": "^6.3.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-3"
    ]
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  }
}
